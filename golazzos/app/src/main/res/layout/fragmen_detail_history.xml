<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6473f">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_menulateral"
                android:background="@null"
                android:layout_margin="10dp"
                android:id="@+id/imageButtonHamburguerMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estadios_title"
                android:textStyle="bold|italic"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:id="@+id/textViewEstadio"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:background="@null"
                android:src="@android:drawable/ic_menu_search"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eaeaea" >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cancelar"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/back_arrow"
                android:layout_marginLeft="15dp"
                android:textColor="#005b7d"
                android:id="@+id/textViewCancelar" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/row_timeline"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewSeparador"
            android:layout_margin="10dp"
            android:src="@drawable/divisor_gris"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comentar"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#eaeaea"
                    android:drawableTop="@drawable/comentar_btn"
                    android:id="@+id/textViewComentar" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me_gusta"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#eaeaea"
                    android:drawableTop="@drawable/like_btn"
                    android:id="@+id/textViewMeGusta" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardViewEstadisticas"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    card_view:cardBackgroundColor="#005b7d"
                    card_view:cardCornerRadius="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/estadisticas"
                        android:id="@+id/textViewEstadisticas"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/grafico"
                        android:drawablePadding="8dp"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/twitter_btn"
                        android:id="@+id/imageViewTwitter" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook_btn"
                        android:id="@+id/imageViewFacebook"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:paddingTop="5dp"
                    android:textColor="#005b7d"
                    android:textStyle="bold"
                    android:text="@string/compartir"
                    android:id="@+id/textViewCompartir"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewJugar"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            card_view:cardBackgroundColor="#ddfd46"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textViewJugar"
                android:text="@string/jugar"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:textColor="#323232"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>