<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#48fe00">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/back_arrow"
                android:background="@null"
                android:layout_margin="10dp"
                android:id="@+id/imageButtonBackArrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivel"
                android:textColor="#126475"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:id="@+id/textViewNivel"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:background="@null"
                android:src="@android:drawable/ic_menu_search"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:gravity="center"
            android:id="@+id/textViewNivelUsuarioNumeroYLetras"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_gravity="bottom">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/firstBar"
            android:background="#0d597f"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="80dp"> </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:id="@+id/secondBar"
            android:background="#0d597f"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_height="120dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:id="@+id/thirdBar"
            android:layout_weight="1"
            android:background="#0d597f"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_height="150dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:id="@+id/fourBar"
            android:background="#0d597f"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_height="160dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:background="#0d597f"
            android:id="@+id/fiveBar"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_height="170dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:id="@+id/sixBar"
            android:background="#0d597f"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_height="180dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/sevenBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#0d597f"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="190dp"
            android:layout_gravity="bottom"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/eightBar"
            android:background="#0d597f"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_height="200dp"></LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/nineBar"
            android:background="#0d597f"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_height="210dp"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:text="1"
            android:id="@+id/textView8" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView9" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView10" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView11" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView12" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView13" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView14" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView15" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="#878787"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/textView16" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#434343"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/viewPagerMatches"
            android:orientation="vertical"
            android:background="#434343"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="87dp"
                            android:layout_height="87dp"
                            android:scaleType="fitXY"
                            android:id="@+id/imageViewLogoNivel"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:textColor="#d6fe00"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/textViewNivelNombre"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/progressBarLoaderImagen"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/textViewUserHits"
                            android:textColor="#d6fe00"
                            android:textStyle="bold|italic"
                            android:textSize="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/linea_gris"
                    android:id="@+id/imageView5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:id="@+id/textViewRecompensa"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#fff"
            android:layout_weight="1" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:id="@+id/linearLayoutRanking"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ranking_logo"
                    android:text="@string/ranking"
                    android:textSize="10dp"
                    android:textColor="#bfbfbf"
                    android:id="@+id/textView17" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/linearLayoutNivel"
                android:layout_height="match_parent"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/nivel_icon_azul"
                    android:drawablePadding="5dp"
                    android:textSize="10dp"
                    android:textColor="#0e5a80"
                    android:text="@string/nivel"
                    android:id="@+id/textView18" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/linearLayoutTrofeos"
                android:layout_height="match_parent"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trofeos"
                    android:drawablePadding="5dp"
                    android:textColor="#bfbfbf"
                    android:textSize="10dp"
                    android:drawableTop="@drawable/trofeos_icon"
                    android:id="@+id/textView19" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/linearLayout4"
                android:layout_height="match_parent"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/aciertos_icon"
                    android:drawablePadding="5dp"
                    android:textColor="#bfbfbf"
                    android:text="@string/aciertos"
                    android:textSize="10dp"
                    android:id="@+id/textView20" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/linearLayout5"
                android:layout_height="match_parent"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textColor="#bfbfbf"
                    android:drawableTop="@drawable/trofeo_gris_icon"
                    android:text="@string/ganadores"
                    android:textSize="10dp"
                    android:id="@+id/textView21" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>